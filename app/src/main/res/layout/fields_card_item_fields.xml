<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcv_fields_card_item"
    android:layout_marginHorizontal="16dp"
    android:layout_width="match_parent"
    style="@style/CustomFieldsCardItemViewStyle"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_fields_card_content"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fields_photo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="center"
                android:src="@drawable/sawit_lahan1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ll_fields_card_content_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fields_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:fontFamily="@font/lato_bold"
                        android:maxLines="1"
                        android:text="Lahan 1sdadsada Lahan 1sdadsada Lahan 1sdadsada"
                        android:textColor="@color/text_primary_900"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_fields_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.75"
                        android:drawableStart="@drawable/ic_filled_location_on_24_text_primary_900"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_bold"
                        android:maxWidth="80dp"
                        android:maxLines="1"
                        android:text="Ngabang, Landak, Kalimantan Barat"
                        android:textColor="@color/text_primary_900"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ib_delete_field_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_filled_delete_24_text_primary_900" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>