<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900"
    android:padding="20dp"
    tools:context=".activities.EditPasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kata Sandi Lama" android:textColor="@color/text_primary_900" android:textSize="16sp" android:textStyle="bold" />
            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukkan kata sandi lama Anda" android:inputType="textPassword" android:layout_marginBottom="16dp" android:minHeight="48dp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kata Sandi Baru" android:textColor="@color/text_primary_900" android:textSize="16sp" android:textStyle="bold" />
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukkan kata sandi baru" android:inputType="textPassword" android:layout_marginBottom="16dp" android:minHeight="48dp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Konfirmasi Kata Sandi Baru" android:textColor="@color/text_primary_900" android:textSize="16sp" android:textStyle="bold" />
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ulangi kata sandi baru Anda" android:inputType="textPassword" android:minHeight="48dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UBAH KATA SANDI"
        android:paddingVertical="12dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6D8B6D"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>