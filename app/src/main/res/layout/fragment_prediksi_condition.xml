<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFBE6"
    android:padding="16dp"
    tools:context=".fragments.ConditionResultFragment">

    <!-- Header: Tombol Back + Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_filled_chevron_right_24_bg_primary_500"
            android:rotation="180"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediction Result"
            android:textColor="@color/text_primary_900"
            android:fontFamily="@font/lato_bold"
            android:textSize="22sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Indikator Warna -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Bad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#FF0000"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bad"
                android:fontFamily="@font/lato_bold"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Good -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#CCFF00"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:fontFamily="@font/lato_bold"
                android:textColor="#CCFF00"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Great -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#00FF00"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great"
                android:fontFamily="@font/lato_bold"
                android:textColor="#00FF00"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Kartu Hasil Prediksi -->
    <LinearLayout
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi Kondisi Sawit"
            android:fontFamily="@font/lato_bold"
            android:textColor="#7C845F"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're Score"
            android:fontFamily="@font/lato_bold"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvScoreValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="62/100"
            android:fontFamily="@font/lato_bold"
            android:textColor="#CCFF00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
