<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900"
    android:padding="20dp"
    tools:context=".activities.EditProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_image_edit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#FFFBEF"
        app:cardCornerRadius="75dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile_picture_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filled_person_24_secondary_overlay"
            android:contentDescription="Foto Profil" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_profile_image_edit"
        app:layout_constraintEnd_toEndOf="@+id/cv_profile_image_edit">

        <ImageButton
            android:id="@+id/btn_edit_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Tombol Edit Foto Profil"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#6D8B6D" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cv_profile_image_edit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nama Lengkap" android:textColor="@color/text_primary_900" android:textSize="16sp" android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_name"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Masukkan nama Anda" android:inputType="textPersonName" android:layout_marginBottom="16dp" android:minHeight="48dp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alamat Email" android:textColor="@color/text_primary_900" android:textSize="16sp" android:textStyle="bold" />
            <EditText
                android:id="@+id/et_edit_email"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Email tidak dapat diubah" android:inputType="textEmailAddress" android:minHeight="48dp"
                android:focusable="false"
                android:enabled="false" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN PERUBAHAN"
        android:paddingVertical="12dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6D8B6D"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>