<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_secondary_900"
    android:gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    tools:context=".fragments.ResultFragment">

    <!-- Header dengan tombol back -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp">

        <!-- Tombol back dengan ripple -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filled_chevron_right_24_bg_primary_500"
            android:rotation="180"
            android:tint="@color/bg_primary_500"
            android:contentDescription="Back Button"
            android:padding="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Prediction Results"
            android:textColor="@color/text_primary_900"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Konten Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Card 1: Prediksi Panen -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="@color/bg_primary_500"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/text_500"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Harvest"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textPrediksiPanen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 ton"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:layout_marginTop="8dp"
                        tools:text="320 ton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Detail Prediksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Rentang Prediksi -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prediction Range"
                            android:textColor="@color/text_700"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/textRentang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="140 - 160 ton"
                            android:textColor="@color/text_primary_900"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="4dp"
                            tools:text="300 - 340 ton" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Efisiensi Produksi -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yield Efficiency"
                            android:textColor="@color/text_700"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/textEfisiensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.5 ton/ha"
                            android:textColor="@color/text_primary_900"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="4dp"
                            tools:text="6.2 ton/ha" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
