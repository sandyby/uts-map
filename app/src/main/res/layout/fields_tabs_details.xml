<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/bg_secondary_overlay_3"
        app:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Field's Information"
                    android:textColor="@color/text_primary_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_filled_edit_24_text_primary_900" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="5"
                android:rowOrderPreserved="true"
                android:useDefaultMargins="true">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Field Name"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Lahan 1"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Location"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="Ngabang, Kalimantan Barat"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Size"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="25 hectares"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Soil Type"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:text="Peat Soil"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginEnd="88dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Last Harvest"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="August 2024"
                    android:textColor="@color/text_primary_900"
                    android:textSize="14sp" />

            </GridLayout>

            <ImageButton
                android:id="@+id/ib_delete_field_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                app:tint="@color/text_fiery_red_sunset_600"
                android:src="@drawable/ic_filled_delete_24_text_primary_900" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
