<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900"
    tools:context=".fragments.ProfileFragment">

    <!-- AppBarLayout for Header (Menggunakan CardView untuk simulasi bentuk melengkung dan Judul) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp" />

    <!-- KONTEN UTAMA PROFILE -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CardView untuk Avatar/Gambar Profil (DIEDIT: Margin disesuaikan agar menjorok ke atas) -->

            <!-- Tombol Edit Profile Picture (Disimulasikan dengan CardView melingkar) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="36dp"
                app:cardBackgroundColor="#FFFBEF"
                app:cardCornerRadius="75dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_filled_person_24_secondary_overlay" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_edit_profile_pic_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/cv_profile_image"
                app:layout_constraintEnd_toEndOf="@+id/cv_profile_image">

                <ImageButton
                    android:id="@+id/btn_edit_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tombol Edit Foto Profil"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#6D8B6D" />

            </androidx.cardview.widget.CardView>


            <!-- Nama Pengguna -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="John Doe"
                android:textColor="@color/text_primary_900"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_profile_image" />

            <!-- Email Pengguna -->
            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@gmail.com"
                android:textColor="#888888"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

            <!-- Container untuk List Menu -->

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_email"
                app:layout_constraintVertical_bias="0.506">

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_email"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="321dp">

                <!-- Ikon Edit -->
                <ImageView
                    android:id="@+id/iv_menu_icon_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Ikon Edit"
                    android:src="@android:drawable/ic_menu_edit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/text_primary_500" />

                <!-- Label Menu -->
                <TextView
                    android:id="@+id/tv_menu_label_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Edit Profile"
                    android:textColor="@color/text_primary_900"
                    android:textSize="16sp"
                    android:fontFamily="@font/lato_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_menu_icon_edit"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_edit_profile"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="368dp">

                <!-- Ikon Lock -->
                <ImageView
                    android:id="@+id/iv_menu_icon_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Ikon Lock"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:tint="@color/text_primary_500"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Label Menu -->
                <TextView
                    android:id="@+id/tv_menu_label_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Edit Password"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/text_primary_900"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_menu_icon_password"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/item_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="417dp">

                <ImageView
                    android:id="@+id/iv_menu_icon_logout"
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:contentDescription="Ikon Keluar"
                    android:rotation="90"
                    android:src="@android:drawable/ic_menu_upload"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/text_fiery_red_sunset_600" />

                <!-- Label Menu -->
                <TextView
                    android:id="@+id/tv_menu_label_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Log Out"
                    android:textColor="@color/text_fiery_red_sunset_600"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_menu_icon_logout"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
